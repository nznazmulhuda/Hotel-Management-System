generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  Admin
  FrontDesk
  Housekeeping
  RestaurantStaff
  InventoryManager
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  password    String
  role        UserRole
  isActive    Boolean  @default(false)
  phoneNumber String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model RoomType {
  id          Int     @id @default(autoincrement())
  name        String // Single, Double, Deluxe, etc.
  description String?
  rooms       Room[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Room {
  id            Int        @id @default(autoincrement())
  roomNumber    String     @unique
  category      String
  pricePerNight Float
  status        RoomStatus @default(AVAILABLE)

  typeId Int
  type   RoomType @relation(fields: [typeId], references: [id])

  amenities RoomAmenity[]
  images    RoomImage[]
  bookings  Booking[] // ✅ Add this line

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RoomAmenity {
  id     Int    @id @default(autoincrement())
  roomId Int
  name   String // e.g., "WiFi", "Air Conditioning"

  room Room @relation(fields: [roomId], references: [id])
}

model RoomImage {
  id     Int    @id @default(autoincrement())
  url    String
  roomId Int

  room Room @relation(fields: [roomId], references: [id])
}

enum RoomStatus {
  AVAILABLE
  BOOKED
  MAINTENANCE
}

model Guest {
  id          Int     @id @default(autoincrement())
  name        String
  email       String?
  phone       String
  nationality String?
  idNumber    String
  blacklisted Boolean @default(false)

  bookings     Booking[] // room bookings
  hallBookings HallBooking[] // banquet/conference bookings

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Booking {
  id           Int           @id @default(autoincrement())
  roomId       Int
  guestId      Int
  source       BookingSource
  status       BookingStatus @default(BOOKED)
  checkInDate  DateTime
  checkOutDate DateTime
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  room  Room  @relation(fields: [roomId], references: [id])
  guest Guest @relation(fields: [guestId], references: [id])
}

enum BookingStatus {
  BOOKED
  CHECKED_IN
  CHECKED_OUT
  CANCELLED
}

enum BookingSource {
  WALK_IN
  ONLINE
  AGENT
}

model Hall {
  id           Int             @id @default(autoincrement())
  name         String
  location     String
  capacity     Int
  pricePerHour Float
  pricePerDay  Float
  equipment    HallEquipment[] // ✅ now normalized
  bookings     HallBooking[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model HallEquipment {
  id     Int    @id @default(autoincrement())
  name   String
  hallId Int

  hall Hall @relation(fields: [hallId], references: [id])
}

model HallBooking {
  id            Int               @id @default(autoincrement())
  hallId        Int
  guestId       Int
  organization  String?
  startTime     DateTime
  endTime       DateTime
  status        HallBookingStatus @default(BOOKED)
  services      HallService[]
  bookingSource BookingSource

  hall  Hall  @relation(fields: [hallId], references: [id])
  guest Guest @relation(fields: [guestId], references: [id])
}

model HallService {
  id        Int         @id @default(autoincrement())
  bookingId Int
  type      ServiceType
  details   String?

  booking HallBooking @relation(fields: [bookingId], references: [id])
}

enum HallBookingStatus {
  BOOKED
  IN_USE
  COMPLETED
  CANCELLED
}

enum ServiceType {
  PROJECTOR
  SEATING
  FOOD
}
